# Example config.yml for liturgical_display
# Copy this file to config.yml and customize for your environment

# Main display configuration
output_image: /home/pi/liturgical_display/today.png
vcom: -1.18
shutdown_after_display: false
log_file: /home/pi/liturgical_display/logs/display.log

# Web server configuration
web_server:
  enabled: true
  host: "0.0.0.0"
  port: 8080
  debug: false

# API Keys for reflection generation
openai_api_key: "your-openai-api-key-here"
scriptura_api_key: "your-scriptura-api-key-here"  # Optional